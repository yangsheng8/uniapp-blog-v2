/* 水平间距 */
.search-result-item-box {
  margin-bottom: 24px;
}
.search-result-item-box .item-title {
  font-size: 12px;
  font-weight: bold;
  color: #000;
}
.search-result-item-box .item-info-img-box {
  display: flex;
}
.search-result-item-box .item-info-img-box .item-img {
  width: 33%;
  height: 70px;
  box-sizing: border-box;
}
.search-result-item-box .item-info-img-box .item-img:nth-child(1n + 1) {
  margin-right: 5px;
}
.search-result-item-box .item-desc-bottom {
  margin-top: 8px;
  display: flex;
  color: #999;
  font-size: 12px;
}
.search-result-item-box .item-desc-bottom .item-author {
  margin-right: 12px;
}
.search-result-item-box .item-desc-bottom .item-read-num .read-num-icon {
  color: #999;
  margin-right: 5px;
}

